<div class="ons-pl-grid-col">
  <div class="ons-grid">
    <div class="ons-grid__col ons-col-6@l ons-col-8@m ">
      {{ template "partials/calendar/items/sort-by" .}}
    </div>
    <div class="ons-grid__col ons-col-6@l ons-col-4@m ons-u-pl-no@l ons-u-pt-xs@l">
      {{ template "partials/calendar/items/subscription-links" .}}
    </div>
  </div>
  {{ if eq (len .Entries) 0 }}
    {{ template "partials/calendar/items/no-result-found" .}}
  {{ else }}
    {{ template "partials/calendar/items/list" .}}
    {{ template "partials/pagination" . }}
  {{ end }}
</div>
