<form class="release-calender-released-date">
  {{/* Include all other page settings in the form submission */}}
  {{ template "partials/calendar/hidden-inputs/release-types" . }}
  {{ template "partials/calendar/hidden-inputs/keywords" . }}
  {{ template "partials/calendar/hidden-inputs/sort-mode" . }}
  {{ template "partials/calendar/hidden-inputs/census" . }}

  {{ if .DateError.Show}}
    <div class="ons-panel ons-panel--error ons-panel--no-title" id="duration-error">
      <span class="ons-panel__assistive-text ons-u-vh">Error: </span>
      <div class="ons-panel__body">
        <p class="ons-panel__error">
          <strong>{{ .DateError.Message }}</strong>
        </p>
        {{ template "partials/inputs/input-date" .AfterDate }}
        {{ template "partials/inputs/input-date" .BeforeDate }}
      </div>
    </div>
  {{ else }}
    {{ template "partials/inputs/input-date" .AfterDate }}
    {{ template "partials/inputs/input-date" .BeforeDate }}
  {{ end }}

  <button type="submit" class="ons-btn ons-btn--secondary ons-u-mt-s text-wrap">
    <span class="ons-btn__inner">{{ localise "ApplyDateFilters" .Language 1 }}</span>
  </button>
</form>
